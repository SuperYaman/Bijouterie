{% extends 'base.html.twig' %}
{% block title %}
        {{ parent() }}Connexion
{% endblock %}
{% block h1 %}
    Connexion
{% endblock %}




{% block body %}
    <div class="row mt-4">
    {% for message in app.flashes('success') %}

            <div class="col-md-6 alert alert-success text-center">
                {{ message }}
            </div>

    {% endfor %}
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <input id="email" class="form-control"  type="text" name="_username" placeholder="Veuillez saisir votre email">
                </div>
                <div class="form-group">
                    <label for="mdp" class="form-label">Mot de passe</label>
                    <input id="mdp" class="form-control" type="password" name="_password" placeholder="Veuillez saisir votre mot de passe">
                </div>

                <button type="submit" class="btn btn-secondary mt-5">Valider</button>


            </form>



        </div>




    </div>





{% endblock %}



